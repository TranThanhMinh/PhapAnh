<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    tools:context="anhpha.clientfirst.crm.activity.ClientsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/layout_toolbar"
            android:id="@+id/include"></include>

        <LinearLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/include"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="8dp"
                android:paddingRight="28dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible"
                android:layout_below="@+id/include"
                android:background="@drawable/layout_round"
                android:layout_toRightOf="@+id/imageButton"
                android:layout_toEndOf="@+id/imageButton">
                <TextView
                    android:orientation="horizontal"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp"
                    android:background="@drawable/layout_round_white"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_alignLeft="@+id/type"
                    android:layout_alignStart="@+id/type">

                </TextView>
                <TextView
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:padding="2dp"
                    android:textColor="@color/white"
                    android:text="@string/title_activity_communication"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_alignLeft="@+id/type"
                    android:layout_alignStart="@+id/type">

                </TextView>


            </LinearLayout>
            <ListView
                android:id="@+id/rvActivities"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="8dp"
                android:paddingRight="28dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible"
                android:layout_below="@+id/include"
                android:background="@drawable/layout_round"
                android:layout_toRightOf="@+id/imageButton"
                android:layout_toEndOf="@+id/imageButton">
                <TextView
                    android:orientation="horizontal"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp"
                    android:background="@drawable/layout_round_white"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_alignLeft="@+id/type"
                    android:layout_alignStart="@+id/type">

                </TextView>
                <TextView
                    android:id="@+id/title"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:padding="2dp"
                    android:textColor="@color/white"
                    android:text="@string/event"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_alignLeft="@+id/type"
                    android:layout_alignStart="@+id/type">

                </TextView>


            </LinearLayout>
            <ListView
                android:id="@+id/rv2"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
