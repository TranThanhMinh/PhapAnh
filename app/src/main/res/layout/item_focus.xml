<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:paddingLeft="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageCheck"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:padding="7dp" />

        <anhpha.clientfirst.crm.swipe.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/swipe_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dragEdge="right"
            app:mode="normal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvOk"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlue"
                    android:gravity="center"
                    android:text="Đã đạt"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/tvNoOk"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorOrange"
                    android:gravity="center"
                    android:text="Chưa đạt"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/tvDelete"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorRed"
                    android:gravity="center"
                    android:text="@string/srtDelete"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignLeft="@+id/client_name"
                        android:layout_alignStart="@+id/client_name"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:visibility="visible"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_round_gray_client"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:visibility="gone">

                        <ImageButton
                            android:id="@+id/imageButton2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="3dp"
                            android:background="@color/gray"
                            android:clickable="true"
                            android:padding="5dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/ic_crm_29" />

                        <ImageButton
                            android:id="@+id/imageButton3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:background="@color/gray"
                            android:clickable="true"
                            android:padding="5dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/ic_crm_32" />

                        <ImageButton
                            android:id="@+id/imageButton4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:background="@color/gray"
                            android:clickable="true"
                            android:padding="5dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/ic_crm_99" />

                        <ImageButton
                            android:id="@+id/imageButton5"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:background="@color/gray"
                            android:clickable="true"
                            android:padding="5dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/ic_crm_28" />

                        <ImageButton
                            android:id="@+id/imageButton6"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:background="@color/gray"
                            android:clickable="true"
                            android:padding="5dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_crm_58" />

                        <ImageButton
                            android:id="@+id/imageButton7"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:background="@color/gray"
                            android:clickable="true"
                            android:padding="5dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/ic_crm_31" />

                        <ImageButton
                            android:id="@+id/imageButton8"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="5dp"
                            android:background="@color/gray"
                            android:clickable="true"
                            android:padding="5dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/ic_crm_34" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/color" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvName_city"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textSize="13sp"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNote"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageOrder"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/ic_crm_16"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/imageMeeting"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/ic_crm_17"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/imageCall"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/ic_crm_18"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/imageEmail"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/ic_crm_20"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/imageEvent"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/ic_crm_23"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </anhpha.clientfirst.crm.swipe.SwipeRevealLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/color1" />
</LinearLayout>