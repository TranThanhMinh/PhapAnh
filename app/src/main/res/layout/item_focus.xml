<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ckDelete"
            android:layout_width="35dp"
            android:padding="7dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:src="@mipmap/ic_crm_12"/>

        <anhpha.clientfirst.crm.swipe.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/swipe_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dragEdge="right"
            app:mode="normal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlue"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="Đã đạt" />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorOrange"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="Chưa đạt" />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorRed"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="@string/srtDelete" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="7dp"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="7dp"
                            android:background="@color/colorOrange" />

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="7dp"
                            android:background="@color/colorRed" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/color"
                        android:text="15 ngày" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvName_city"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:text="Công ty TNHH Humana Việt Nam" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNote"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:text="Xin cuộc hẹn" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/ic_crm_16" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/ic_crm_17" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/ic_crm_18" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/ic_crm_20" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/ic_crm_23" />


                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </anhpha.clientfirst.crm.swipe.SwipeRevealLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginTop="5dp"
        android:background="@color/color" />
</LinearLayout>