<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anhpha.clientfirst.crm.activity.ActivityUserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/layout_toolbar"
            android:id="@+id/include"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:background="@color/gray"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/include"
            android:id="@+id/relativeLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:text="@string/today"
                android:id="@+id/tvDate"
                android:padding="20dp"
                android:textColor="@color/colorApp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_large"
                android:id="@+id/tvAmount"
                android:layout_above="@+id/linearLayout"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tvDate"
                android:layout_toEndOf="@+id/tvDate" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/tvDate"
                android:id="@+id/linearLayout">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:id="@+id/line1"
                    android:layout_height="match_parent"
                    android:layout_weight="16"
                    >
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_crm_16"
                        android:scaleType="centerInside"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:clickable="false"
                        android:id="@+id/imageButton1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:clickable="false"
                        android:gravity="center"
                        android:id="@+id/textView1" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/line2"
                    android:layout_weight="16"
                    >
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_crm_17"
                        android:scaleType="centerInside"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:clickable="false"
                        android:id="@+id/imageButton2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:clickable="false"
                        android:gravity="center"
                        android:id="@+id/textView2" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/line3"
                    android:layout_weight="16"
                    >
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_crm_96"
                        android:scaleType="centerInside"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:clickable="false"
                        android:id="@+id/imageButton3" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:clickable="false"
                        android:gravity="center"
                        android:id="@+id/textView3" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/line4"
                    android:layout_weight="16"
                    >
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_crm_18"
                        android:scaleType="centerInside"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:clickable="false"
                        android:id="@+id/imageButton4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:clickable="false"
                        android:gravity="center"
                        android:id="@+id/textView4" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:id="@+id/line5"
                    android:layout_height="match_parent"
                    android:layout_weight="16"
                    >
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_crm_20"
                        android:scaleType="centerInside"
                        android:background="@color/transparent"
                        android:clickable="false"
                        android:gravity="center"
                        android:id="@+id/imageButton5" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:clickable="false"
                        android:gravity="center"
                        android:id="@+id/textView5" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/line7"
                    android:layout_weight="16"
                    >
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_crm_23"
                        android:scaleType="centerInside"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:clickable="false"
                        android:id="@+id/imageButton7" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:clickable="false"
                        android:gravity="center"
                        android:id="@+id/textView7" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true">
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="8dp"
                android:paddingRight="28dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible"
                android:layout_below="@+id/include"
                android:background="@drawable/layout_round"
                android:layout_toRightOf="@+id/imageButton"
                android:layout_toEndOf="@+id/imageButton">
                <TextView
                    android:orientation="horizontal"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp"
                    android:background="@drawable/layout_round_white"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_alignLeft="@+id/type"
                    android:layout_alignStart="@+id/type">

                </TextView>
                <TextView
                    android:id="@+id/title"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:padding="2dp"
                    android:textColor="@color/white"
                    android:text="@string/to_date"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_alignLeft="@+id/type"
                    android:layout_alignStart="@+id/type">

                </TextView>


            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvActivities"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
